{
  "name": "school-timetable-monorepo",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "vite --config vite.frontend.config.ts",
    "dev:backend": "npx wrangler dev --config ./wrangler.toml",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "vite build --config vite.frontend.config.ts",
    "build:backend": "vite build --config vite.backend.config.ts",
    "preview": "npm run build && wrangler pages dev dist/frontend --compatibility-date=2024-04-01 --proxy 8787",
    "deploy": "npm run build && wrangler deploy --config ./wrangler.toml",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "db:generate": "drizzle-kit generate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:migrate": "drizzle-kit migrate",
    "test": "vitest",
    "test:run": "vitest run",
    "test:e2e": "dotenv -e .env.e2e -- playwright test",
    "test:e2e:ui": "dotenv -e .env.e2e -- playwright test --ui",
    "test:e2e:headed": "dotenv -e .env.e2e -- playwright test --headed",
    "test:e2e:auth": "dotenv -e .env.e2e -- playwright test --project=setup",
    "test:e2e:crud": "dotenv -e .env.e2e -- playwright test --project=chromium tests/e2e/authenticated-crud.spec.ts",
    "test:e2e:school": "dotenv -e .env.e2e -- playwright test --project=chromium tests/e2e/authenticated-crud.spec.ts --grep \"認証後の基本設定\"",
    "test:e2e:teachers": "dotenv -e .env.e2e -- playwright test --project=chromium tests/e2e/teacher-crud.spec.ts",
    "test:e2e:report": "playwright show-report",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write ."
  },
  "dependencies": {
    "@clerk/clerk-react": "^5.32.4",
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@hono/swagger-ui": "^0.5.0",
    "@hono/zod-openapi": "^0.19.1",
    "@hono/zod-validator": "^0.7.0",
    "@paralleldrive/cuid2": "^2.2.2",
    "@radix-ui/react-checkbox": "^1.3.2",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.5",
    "@radix-ui/react-tabs": "^1.1.12",
    "@radix-ui/react-toast": "^1.2.14",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "drizzle-orm": "^0.44.2",
    "hono": "^4.8.3",
    "jose": "^5.9.6",
    "jsonwebtoken": "^9.0.2",
    "jwks-client": "^2.0.5",
    "lucide-react": "^0.525.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router-dom": "^7.6.3",
    "sonner": "^2.0.6",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^3.4.17",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.25.73"
  },
  "devDependencies": {
    "@biomejs/biome": "2.0.6",
    "@cloudflare/vite-plugin": "^1.2.3",
    "@cloudflare/workers-types": "^4.20250704.0",
    "@eslint/js": "^9.30.1",
    "@playwright/test": "^1.54.1",
    "@types/node": "^24.0.10",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.1.0",
    "dotenv-cli": "^9.0.0",
    "drizzle-kit": "^0.31.4",
    "eslint": "^9.30.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "playwright": "^1.54.1",
    "postcss": "^8.5.6",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.35.1",
    "vite": "^7.0.3",
    "vitest": "^3.2.4",
    "wrangler": "^4.17.0"
  }
}
