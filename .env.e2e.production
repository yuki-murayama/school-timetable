# E2Eテスト用環境変数（本番環境）
# テストユーザーアカウント（メインテストユーザー）
TEST_USER_EMAIL=test@school.local
TEST_USER_PASSWORD=password123

# 管理者テストアカウント
ADMIN_USER_EMAIL=admin@school.local
ADMIN_USER_PASSWORD=admin123

# 教師テストアカウント
TEACHER_USER_EMAIL=teacher@school.local
TEACHER_USER_PASSWORD=teacher123

# Playwright設定（本番環境）
PLAYWRIGHT_BASE_URL=https://school-timetable-monorepo.grundhunter.workers.dev

# テスト環境設定
NODE_ENV=test
E2E_TIMEOUT=30000
E2E_SCREENSHOT_ON_FAILURE=true

# APIサーバーURL（本番環境）
E2E_BASE_URL=https://school-timetable-monorepo.grundhunter.workers.dev

# テストデータ識別用プレフィックス（オプション）
E2E_TEST_DATA_PREFIX=prod_e2e_test_

# デバッグモード（詳細ログ出力、オプション）
E2E_DEBUG=true